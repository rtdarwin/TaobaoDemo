<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TaobaoTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tb_red</item>
        <item name="colorPrimaryDark">#300f00</item>
        <item name="colorAccent">@color/tb_h_red</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>
        <style name="goodsDetailLinerLayout">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="goodsDetailFont">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

</resources>
